<?xml version="1.0" encoding="UTF-8"?>
<!-- 映射文件需要dtd指定格式 -->
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.xiaonei.domain">
	<class name="Town" lazy="true">
		<id name="id" column="id" type="java.lang.Integer">
			<generator class="increment"></generator>
		</id>
		<property name="name" type="java.lang.String">
			<column name="name" length="32" />
		</property>
	
		<many-to-one name="city" column="cityId"/>
		<set name="techSchools" >
			
			<key>
				<column name="townId"/>
			</key>
			<one-to-many class="TechSchool"/>
		</set>
		<set name="juniors" >
			
			<key>
				<column name="townId"/>
			</key>
			<one-to-many class="Junior"/>
		</set>
		<set name="primarySchools" >
			
			<key>
				<column name="townId"/>
			</key>
			<one-to-many class="PrimarySchool"/>
		</set>
		<set name="seniors" >
			
			<key>
				<column name="townId"/>
			</key>
			<one-to-many class="Senior"/>
		</set>
	</class>

</hibernate-mapping>